#include <stdio.h>
#include <stdlib.h>
#include <locale.h>
#include <math.h>
#include <string.h>
#include <ctype.h>
#include <time.h>

int main(){

   
    setlocale(LC_ALL, "portuguese");
    char codigoCorreto [2006] = "2006";
    char codigo [2006];


    do
    {
        printf("Informe o c√≥digo:" );
        gets(codigo);

        if (strcmp(codigoCorreto, codigo) == 0)
        {
            printf("Acesso permitido.\n");
        }  
        else
        {
            printf("Acesso negado. \n");
            sleep(2);
            printf("Tente Novamente. \n");
            sleep(3);
        }


    } while (strcmp(codigoCorreto, codigo) != 0);



    

    getchar();
    return 0;
}
