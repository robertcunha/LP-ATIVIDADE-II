    float n;
    int i;

    setlocale(LC_ALL, "Portuguese");
    printf("Digite seu nome:\n");
    scanf("%s", &nome);
    for (i = 0; i < 3; i++)
    {
        printf("\nDigite a %dÂª nota:\n", i + 1);

        scanf("%f", &n);
        soma += n;
    }
    media = soma / 3;
    printf("\nA sua media foi %.2f\n", media);




    return 0;
}
